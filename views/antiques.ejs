<%- include("partials/header") %>

<div class="container">
<header class="jumbotron jumbotron-fluid">
<div class="container">
	
<h1>Antiques</h1>
	
	<p>
		<a class="btn btn-primary btn-lg" href="/antiques/new">Post your antique piece</a>
	</p>
</div>

</header>

	<div class="row">
		<div class="col-lg-12">
			<h3 class="heading">
				Our most popular Antiques
			</h3>
		</div>
	</div>


<div class="row text-center" style="display:flex; flex-wrap: wrap;">
	<% campgrounds.forEach(function(camp){ %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%= camp.image %>">
			
				<div class="caption">
					<h4><%= camp.name %></h4>
				</div>
				<p>
					<a href="/antiques/<%= camp._id %>" class="btn btn-primary">More info</a>
				</p>
			</div>
			
	    </div>
	<% }); %>
</div>
	
</div>

<%- include("partials/footer") %>